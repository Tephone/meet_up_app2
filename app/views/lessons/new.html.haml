- if @lesson.errors.present?
  - @lesson.errors.full_messages. each do |msg|
    = msg 

%h2 レッスン作成画面
%p レッスン開始日時を指定してください
= form_with(model: @lesson) do |f|
  = f.datetime_field :started_at, min: Time.zone.today
  = f.submit

= link_to '複数一括登録', new_multiple_lesson_path
= link_to '範囲指定一括登録', new_time_range_lesson_path
